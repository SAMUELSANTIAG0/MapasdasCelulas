<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.igrejadapaz.fortaleza.mapasdascelulas.DetalhesCelula"
    tools:showIn="@layout/activity_detalhes_celula"
    android:background="@color/fundoAzul">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome"
        android:id="@+id/textViewNome"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dia"
        android:id="@+id/textViewDiaHora"
        android:layout_below="@+id/textViewNome"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Endereco"
        android:id="@+id/textViewEndereco"
        android:layout_below="@+id/textViewDiaHora"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tipo"
        android:id="@+id/textViewTipo"
        android:layout_below="@+id/textViewEndereco"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NomeLider"
        android:id="@+id/textViewNomeLider"
        android:layout_below="@+id/textViewTipo"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Telefone"
        android:id="@+id/textViewTelefone"
        android:layout_below="@+id/textViewNomeLider"
        android:layout_alignParentStart="true"
        android:onClick="ligar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rede"
        android:id="@+id/textViewRede"
        android:layout_below="@+id/textViewTelefone"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:src="@mipmap/mda_icon"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewRede"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Convidar para a cÃ©lula"
        android:onClick="toShared"
        android:nestedScrollingEnabled="false"
        android:background="@drawable/buttonshape2"
        android:id="@+id/buttonConvidar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="60dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@android:drawable/ic_menu_call"
        android:layout_alignTop="@+id/textViewTelefone"
        android:layout_alignEnd="@+id/buttonConvidar"
        android:onClick="ligar" />

</RelativeLayout>
